<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:textStyle="bold"
                android:text="Event Name" />

            <EditText
                android:id="@+id/etEventName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:hint="Event name" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:textStyle="bold"
                android:text="Event Time" />

            <TextView
                android:id="@+id/tvTaskTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".33"

                android:text="Start" />

            <TextView
                android:id="@+id/tvTaskEndTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"

                android:text="End " />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:textStyle="bold"
                android:text="Event Duration" />

            <TextView

                android:id="@+id/etEventTimeDuration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:padding="2dp"
                android:paddingLeft="4dp"
                android:hint=" Event Duration" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="Event Type"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerEventType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"

                android:hint="Event Priority" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:textStyle="bold"
                android:text="Event Priority" />

            <Spinner
                android:id="@+id/spinnerEventPriority"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"

                android:hint="Event Priority" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:textStyle="bold"
                android:text="Event Frequency" />

            <Spinner
                android:id="@+id/spinnerEventFrequency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"

                android:hint="Event Frequency" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
